include ./layouts/header.pug
include ./layouts/nav.pug

main
  section
    .row.mt-5
      .col-md-3
        .container
          .card
            .card-body
              form(action="")
                .form-group
                  label(for="search") Search
                  .input-group
                    input.form-control(type="text", name="search" placeholder="Enter a product name...")
                    .input-group-append
                    span.input-group-text
                      i.fas.fa-search
                label(for="top_chart") Top Chart
                .form-group
                  input(type="checkbox", name="top_chart" class="form-check-input") 
                  label(for="latest" class="form-check-label") Latest
                  input(type="checkbox", name="top_chart" class="form-check-input") 
                  label(for="popular" class="form-check-label") Most Popular
                  input(type="checkbox", name="top_chart" class="form-check-input")
                  label(for="review" class="form-check-label") Top Review
                .form-group
                  label(for="price") Price Range
                  input(type="range", name="price" class="form-control-range")
                .form-group
                  label(for="category") Category
                  br
                  each category in categories
                    input(type="checkbox", name="category")
                    label(for="category")= category
      .col-md-9 
        each item in items
          .col-md-3
            .card.text-center
              img.card-img-top(src="https://isteam.wsimg.com/ip/9b02432e-870d-4cf8-a939-514b86ec717e/ols/1_original/:/rs=w:280,h:280,cg:false,m" alt="placeholder")
              .card-body
                h3= item.name
                .d-flex.align-items-center.justify-content-center
                  span.mr-2= item.rating
                  - for(var i = 0 ; i < item.rating.toFixed(0) ; i++)
                      i.fas.fa-star
                  - var ratingHalf = item.rating - item.rating.toFixed(0)
                  if (ratingHalf)
                    i.fas.fa-star-half
                a.btn.btn-primary.mt-3(href=`/product?id=${item.uuid}`)
                  i.fas.fa-eye.mr-2
                  span See More Detail
                br
                a.btn.btn-primary.mt-2(href="#")
                  i.fas.fa-cart-plus.mr-2
                  span Add to Cart 

        
            

include ./layouts/footer.pug