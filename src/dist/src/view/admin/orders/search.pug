include ../layouts/header.pug 
include ../layouts/nav.pug

include ../layouts/sidebar.pug 

  section
    .container
      .row.mt-3
        .col-12
          .card
            .card-body
              .row
                .col-md-4
                  label(for="") Search:
                  input.form-control(type="text" placeholder="Unique Identification Code")
                .col-md-4
                .col-md-4
              .row
                .col-md-4
                  label(for="") Date:
                  .row.no-gutters
                    .col-6
                      input.form-control(type="date", name="" placeholder="Min:")
                    .col-6
                      input.form-control(type="date", name="" placeholder="Max:")
                .col-md-4
                  label(for="") Customer:
                  input.form-control(type="text" placeholder="Name")
                .col-md-4
                  label(for="") Charge:
                  input.form-control(type="text" placeholder="$$$")
              a.btn.btn-primary(href="#").mt-3.btn-sm
                i.fas.fa-search.mr-2
                | Search
  if orders
    section
      .container
        .row
          .col-12
            table.table.table-bordered
              thead
                th Order ID
                th Customer Name
                th Address
                th Transaction Timestamp
                th Sub-Total
                th Total
                th Recipt
                th
              tbody
                each order in orders
                  td=order.id
                  td=order.name
                  td=order.address
                  td=order.timestamp
                  td=order.subtotal
                  td=order.total
                  td
                    a.btn.btn-primary
                      i.fas.fa-email.mr-2
                      | Email



include ../layouts/footer.pug