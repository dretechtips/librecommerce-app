{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES2016",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src/libs",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "typeRoots": ["./node_modules/@types", "./src/libs"],
    "paths": {}
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
