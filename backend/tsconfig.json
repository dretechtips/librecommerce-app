{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ESNext",
    "noImplicitAny": true,
    "target": "ES2016",
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src/libs",
    "paths": {
      "database": ["database"]
    },
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["./src/*"]
}
